{
  "name": "study-assist",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A browser extension to intelligently organise your bookmarks",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icons/logo-96.png",
    "default_title": "Study Assist"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icons/logo-48.png",
    "96": "icons/logo-96.png"
  },
  "permissions": [
    "storage",
    "declarativeContent",
    "bookmarks",
    "tabs",
    "activeTab"
  ]
}

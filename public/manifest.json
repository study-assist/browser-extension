{
  "name": "Study Assist",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A browser extension to intelligently organise your bookmarks",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icons/logo-96.png",
    "default_title": "Study Assist"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": { "48": "icons/logo-48.png", "96": "icons/logo-96.png" },
  "permissions": [
    "storage",
    "bookmarks",
    "tabs",
    "activeTab",
    "<all_urls>",
    "*://developer.mozilla.org/*",
    "chrome-devtools://*"
  ],
  "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'"
}
